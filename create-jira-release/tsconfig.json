{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "ES2020",
    "lib": [
      "es6"
    ],
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["__test__", "lib", "node_modules"]
}

